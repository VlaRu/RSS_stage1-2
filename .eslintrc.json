{
  "extends": "airbnb",
  "env": {
    "browser": true
  },
  "rules": {
    "max-len": ["error", {
      "code": 500,       // Maximum line length
      "tabWidth": 2,     // Number of spaces per indentation level (if you're using spaces for indentation)
      "ignoreUrls": true // Ignore long URLs
    }]
  }
}
